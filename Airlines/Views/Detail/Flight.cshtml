@using _00.Common
@{
    ViewBag.Title = "title";
}

<div class="container" style="padding-top: 72px;">
    <div class="row">
        <div class="details col-md-6">
            <div>
                <span>Назва:</span>
                <span>@ViewBag.model.Name</span>
            </div>
            <div>
                <span>Відпралення:</span>
                <span>@DateTimeExpression.ToDayMonthYear(ViewBag.model.LeavingTime)</span>
            </div>
            <div>
                <span>Прибуття:</span>
                <span>@DateTimeExpression.ToDayMonthYear(ViewBag.model.Arrives)</span>
            </div>
            <div>
                <span>Виліт з:</span>
                <span>@ViewBag.model.AirportFrom (@ViewBag.model.CountryFrom)</span>
            </div>
            <div>
                <span>Прибуття до:</span>
                <span>@ViewBag.model.AirportTo (@ViewBag.model.CountryTo)</span>
            </div>
            <div>
                <span>Вартість:</span>
                <span>@ViewBag.model.Coast грн.</span>
            </div>
        </div>

        <div class="col-md-6 col-centered">
            <button type="button" class="btn btn-warning my-btn" style="font-size: 28px; width: 280px; height: 60px; margin-top: 232px;">ЗАМОВИТИ <i class="fa fa-shopping-cart" aria-hidden="true"></i></button>
        </div>
    </div>
</div>

    
